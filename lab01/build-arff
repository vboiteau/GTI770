#!/bin/bash

echo -e "@relation Homer-Bart\n@attribute primitive_orange numeric\n@attribute primitive_blanc numeric\n@attribute primitive_gris numeric\n@attribute primitive_vert numeric\n@attribute primitive_bleu numeric\n@attribute classe {Homer, Bart}\n@data\n$(cat apprentissage-homer-bart.txt)" > apprentissage-homer-bart.arff
echo -e "@relation Homer-Bart\n@attribute primitive_orange numeric\n@attribute primitive_blanc numeric\n@attribute primitive_gris numeric\n@attribute primitive_vert numeric\n@attribute primitive_bleu numeric\n@attribute classe {Homer, Bart}\n@data\n$(cat validation-homer-bart.txt)" > validation-homer-bart.arff
echo -e "@relation Homer-Bart\n@attribute primitive_orange numeric\n@attribute primitive_blanc numeric\n@attribute primitive_gris numeric\n@attribute primitive_vert numeric\n@attribute primitive_bleu numeric\n@attribute primitive_rouge numeric\n@attribute classe {Homer, Bart, Lisa}\n@data\n$(cat apprentissage-homer-bart-lisa.txt)" > apprentissage-homer-bart-lisa.arff
echo -e "@relation Homer-Bart\n@attribute primitive_orange numeric\n@attribute primitive_blanc numeric\n@attribute primitive_gris numeric\n@attribute primitive_vert numeric\n@attribute primitive_bleu numeric\n@attribute primitive_rouge numeric\n@attribute classe {Homer, Bart, Lisa}\n@data\n$(cat validation-homer-bart-lisa.txt)" > validation-homer-bart-lisa.arff
